<h3 class="align-left">Log In</h3>

<form action="/session" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <label class="input-label">Username<br>
    <input class="form-control full-width" name="user[username]" type="text"><br>
  </label class="input-label"><br>
  <label class="input-label">Password<br>
    <input class="form-control full-width" name="user[password]" type="password"><br>
  </label><br>
  <input type="submit" value="Submit" class="btn btn-primary submit-button"><br>
</form>
